{
  "private": true,
  "name": "shopping",
  "version": "1.0.0",
  "description": "Simple Shopping Application",
  "main": "index.js",
  "scripts": {
    "bootstrap": "yarn add -D lerna -W && lerna bootstrap",
    "start:api": "yarn workspace @shopping/api start",
    "start:ui": "yarn workspace @shopping/ui start",
    "start": "concurrently \"yarn start:api\" \"yarn start:ui\"",
    "build": "yarn add --dev && yarn workspace @shopping/ui build", 
    "purge": "shx rm -rf node_modules && lerna clean --yes"
  },
  "author": "Nghia (Tony)",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "eslint": "^8.1.0",
    "husky": "4",
    "if-env": "^1.0.4",
    "lerna": "^4.0.0",
    "shx": "^0.3.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "types": {
        "feat": {
          "description": "A new feature",
          "title": "Feature"
        },
        "fix": {
          "description": "A bug fix",
          "title": "Bug Fix"
        },
        "docs": {
          "description": "Documentation only changes",
          "title": "Documentation"
        },
        "style": {
          "description": "Changes that do not affect the meaning of the code (white-space, formatting, line-break, etc)",
          "title": "Style"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug or adds a feature",
          "title": "Code refactoring"
        },
        "perf": {
          "description": "A code change that improves performance",
          "title": "Performance Improvement"
        },
        "test": {
          "description": "A code change that adds or modifies test code",
          "title": "Test"
        },
        "chore": {
          "description": "Changes that do not affect any code but changes project config such as package.json, gitlab-ci.yml, etc",
          "title": "Chore"
        },
        "minor": {
          "description": "A minor release",
          "title": "Minor Release"
        },
        "major": {
          "description": "A major release",
          "title": "Major Release"
        }
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "chore",
          "minor",
          "major"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "git add .",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
